
pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "supundhananjaya6076/nginx-cicd:v1"

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/supundp/repo1.git',
                    credentialsId: 'TST1'
            
            }


        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t nginx-cicd:v1 ."
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    sh "docker push nginx-cicd:v1"
                }
            }
        }

    }
}
